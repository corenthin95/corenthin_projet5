{% extends "base.html.twig" %}

{% import "form.html.twig" as form %}

{% block head %}
    <title>Blog Professionnel - Connexion</title>
{% endblock %}

{% block content %}
    <section class="container-fluid" id="base-form-page">
        <div class="row" id="login-register-title">
            <h1>Connexion</h1>
        </div>
        <div class="container" id="login-register-structure">
            <form class="row" method="post">
                <input type="hidden" name="_csrf_token" id="_csrf_token" value={{ session.token }} />
                {{ form.input('email', 'Identifiant', email, {type: 'email'}) }}
                {{ form.inputPassword('password', 'Mot de passe', password) }}
                <div id="base-form-button-row">
                    <button type="submit" class="btn btn-primary" id="base-form-button">Se connecter</button>
                </div>
            </form>
            {% if errors|length > 0 %}
            <ul>
            {% for error in errors %}
                <li>{{ error }}</li>
            {% endfor %}
            </ul>
            {% endif %}
        </div>
    </section>
{% endblock %}
{% endmacro %}


{% macro textarea(name, label) %}
    <div class="row mb-3">
        <label for="{{ name }}" class="form-label">{{ label }}</label>
        <textarea type="text" class="form-control" id="{{ name }}" name="{{ name }}"></textarea>
    </div>
{% endmacro %}
{% extends "base.html.twig" %}

{% block head %}
    <title>Edition d'un article</title>
{% endblock %}

{% import 'form.html.twig' as form %}

{% block content %}
    <div class="container">
        <h1>Editer l'article {{ article.title }}</h1>

        {% if errors %}
            <div>{{ errors }}</div>
        {% endif %}

        <form method="post">
            <div class="form-group">
                <label for="title">Titre de l'article</label>
                <input type="text" class="form-control" name="title" id="title" value={{ article.title }}>
            </div>
            <div class="form-group">
                <label for="leadParagraph">Châpo</label>
                <input type="text" class="form-control" name="leadParagraph" id="leadParagraph" value={{ article.lead_paragraph }}>
            </div>
            <div class="form-group">
                <label for ="content">Contenu de l'article</label>
                <textarea class="form-control" name="content" id="content" rows="5">{{ article.content }}</textarea>
            </div>
            <br>
            <button class="btn btn-primary" type="submit">Editer </button>
        </form>
    </div>


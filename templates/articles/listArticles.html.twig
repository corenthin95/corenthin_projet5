{% extends "base.html.twig" %}

{% block head %}
    <title>Blog Professionnel - Articles</title>
{% endblock %}

{% block content %}
    <div class="container-fluid" id="list-articles">
        <h2>Les derniers articles</h2>
    </div>

    <div class="container">
        <div class="row">
            {% for article in articles %}
                <div class="col-6">
                    <div class="card" id="card-list-articles">
                    <img src="/img/php_img.png" class="card-img-top" alt="Php image">
                        <div class="card-body" id="card-body-list-articles">
                            <h5 class="card-title">{{ article.title }}</h5>
                            <h6 class="card-subtitle mb-2 text-muted">{{ article.lead_paragraph }}</h6>
                            <p class="card-text" id="card-text-list-articles">{{ article.content | u.truncate(100, '...', false)}}</p>
                            <a href={{ "/articles/"~article.id~"/show" }} type="button" class="btn btn-light" data-toggle="modal" data-target="#global_modal" id="articles-button">Voir la suite</a>
                        </div>
                        <div class="card-footer"><small class="text-muted">{{ article.lastUpdate | date("d/m/Y H:i") }}</small></div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}

